@{
    ViewBag.Title = "Page Not Found";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page Not Found</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f1f0fb;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
            padding: 0;
            overflow: hidden; /* Prevent scrolling */
        }

        .container {
            max-width: 90%;
            padding: 20px;
        }

        .image-container {
            height: 40vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

        img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        h2 {
            font-size: 28px;
            color: #1A1F2C;
            margin: 20px 0;
        }

        p {
            font-size: 18px;
            color: #8E9196;
            margin-bottom: 25px;
        }

        .btn-home {
            display: inline-flex;
            align-items: center;
            padding: 14px 30px;
            background: linear-gradient(to right, #9b87f5, #7E69AB);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            font-size: 18px;
            font-weight: bold;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            transition: all 0.3s ease;
            transform: scale(1);
        }

            .btn-home:hover {
                background: linear-gradient(to right, #7E69AB, #9b87f5);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
                transform: scale(1.05);
            }

            .btn-home:active {
                transform: scale(0.95);
            }

        .home-icon {
            margin-right: 10px;
            transition: transform 0.3s ease;
            display: inline-block;
        }

        .btn-home:hover .home-icon {
            transform: rotate(12deg);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="image-container">
            <img src="~/assets/img/404.png" alt="404 Not Found" />
        </div>
        <h2>Oops! Page Not Found</h2>
        <p>The page you are looking for might have been removed or temporarily unavailable.</p>
        <a href="@Url.Action("Index", "Home")" class="btn-home">
            <span class="home-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
            </span>
            <span>العودة إلى الصفحة الرئيسية</span>
        </a>
    </div>
</body>
</html>
